# Config stuff
OCAMLC = ocamlc
OCAMLLEX = ocamllex
MYACC = ../yacc/myacc
CAMLDEP = @top_srcdir@/camldep
MLFLAGS = @MLFLAGS@
MLLINKFLAGS = @MLLINKFLAGS@
abs_top_srcdir = @abs_top_srcdir@
abs_top_builddir = @abs_top_builddir@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
subdir = debugger
SHELL = /bin/sh
DEPEND = @DEPEND@
EXEEXT = @EXEEXT@
VPATH = @srcdir@
OCAMLDIR = @OCAMLDIR@
PKG_CONFIG = @PKG_CONFIG@
PKG_FLAGS = @PKG_FLAGS@
GTKPKGS = @GTKPKGS@
WINDOWS = @WINDOWS@
MACOS = @MACOS@
LABLGTK_VERSION = @LABLGTK_VERSION@
LABLGTK_INC = @LABLGTK_INC@
LABLGTK_LIBS = @LABLGTK_LIBS@
LABLGTK_CCLIB = @LABLGTK_CCLIB@
# End

all: obdb1

PKGCONF = $(PKG_CONFIG) $(PKG_FLAGS)
GTKFLAGS := $(shell $(PKGCONF) --cflags $(GTKPKGS))

ifdef MACOS
  GTKLIBS := -L$(abs_top_builddir)/macport/gtklib \
	$(shell $(PKGCONF) --libs-only-l $(GTKPKGS))
else
  GTKLIBS := $(shell $(PKG_CONFIG) --libs-only-L $(GTKPKGS)) \
	$(shell $(PKGCONF) --libs-only-l $(GTKPKGS))
endif

INCLUDE = -I ../mllib -I ../compiler -I ../yacc $(LABLGTK_INC)
LIBS = unix.cma threads.cma str.cma $(LABLGTK_LIBS)

OBDB1 = ../mllib/mllib.cma ../yacc/yyparse.cmo ../compiler/basis.cma \
	debugger.cma debmain.cmo debprims.o
obdb1: $(OBDB1)
	$(OCAMLC) $(MLFLAGS) -custom -thread $(LABLGTK_INC) $(LIBS) \
		$(OBDB1) $(LABLGTK_CCLIB) $(MLLINKFLAGS) -o $@

DEBUGGER = debconf.cmo binary.cmo info.cmo procio.cmo data.cmo \
	control.cmo interface.cmo sourcebook.cmo varsview.cmo stackview.cmo
debugger.cma: $(DEBUGGER)
	ocamlc $(MLFLAGS) -a -o $@ $^

debprims.o: debprims.c
	$(OCAMLC) -c -ccopt '-I ..' -ccopt '$(GTKFLAGS)' -o $@ $<

interface.ml:
	ln -s interface-gtk$(LABLGTK_VERSION).ml $@

## Rules

%.mli %.ml: %.mly
	$(MYACC) -v $<

%.ml: %.mll
	$(OCAMLLEX) -o $@ $<

%.cmi: %.mli
	$(OCAMLC) $(MLFLAGS) -c $(INCLUDE) -o $@ $<

%.cmo: %.ml
	$(OCAMLC) $(MLFLAGS) -c $(INCLUDE) -thread -o $@ $<

.DELETE_ON_ERROR:

## Cleanup

ifdef DEPEND
DEPFILE = $(srcdir)/Depend
endif

clean:
	rm -f obdb1$(EXEEXT) debrun$(EXEEXT) obdb1.x *.cmi *.cmo *.cma *.o

quiteclean: clean
	rm -f interface.ml 

distclean: quiteclean
	rm -f Makefile debconf.ml

realclean: distclean
	rm -f $(srcdir)/Depend 

## Configuration and dependencies

Makefile: $(srcdir)/Makefile.in ../config.status
	cd .. && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= ./config.status

debconf.ml: $(srcdir)/debconf.ml.in ../config.status
	cd .. && ./config.status --file=$(subdir)/$@

ML = procio.mli procio.ml binary.mli binary.ml \
	info.mli info.ml data.mli data.ml control.mli control.ml \
	debmain.ml sourcebook.ml \
	sourcebook.mli varsview.ml varsview.mli stackview.ml \
	stackview.mli debconf.ml interface.ml

ifdef DEPEND
$(srcdir)/Depend: $(ML)
	$(CAMLDEP) $(INCLUDE) -x Bytes $^ >$@
endif

include $(srcdir)/Depend
