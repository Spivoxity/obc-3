# Config stuff
OCAMLC = ocamlc
OCAMLLEX = ocamllex
MYACC = ../yacc/myacc
YYPARSE = ../yacc/yyparse.cmo
YYLIB = -I ../yacc
CAMLDEP = @top_srcdir@/camldep
MLFLAGS = @MLFLAGS@
MLLINKFLAGS = @MLLINKFLAGS@
abs_top_srcdir = @abs_top_srcdir@
abs_top_builddir = @abs_top_builddir@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
subdir = debugger
SHELL = /bin/sh
DEPEND = @DEPEND@
EXEEXT = @EXEEXT@
VPATH = @srcdir@
OCAMLDIR = @OCAMLDIR@
COMPAT = @COMPAT@
PKG_CONFIG = @PKG_CONFIG@
GTKPKGS = @GTKPKGS@
WINDOWS = @WINDOWS@
MACOS = @MACOS@
# End

all: obdb1

INCLUDE = -I ../compat -I ../compiler -I ../lablgtk

PKGCONF = $(PKG_ENV) $(PKG_CONFIG) $(PKG_FLAGS)

ifdef WINDOWS
# PKG_PATH = $(abs_top_srcdir)/winport:/cygdrive/c/GTK/lib/pkgconfig
# PKG_ENV = env PKG_CONFIG_PATH=$(PKG_PATH)
  PKG_FLAGS = --define-variable=prefix=C:/msys64/mingw64
endif

ifdef MACOS
  GTKLIBS := -L$(abs_top_builddir)/macport/gtklib \
	$(shell $(PKGCONF) --libs-only-l $(GTKPKGS))
else
  GTKLIBS := $(shell $(PKGCONF) --libs-only-L $(GTKPKGS)) \
	$(shell $(PKGCONF) --libs-only-l $(GTKPKGS))
endif

LIBS = unix.cma threads.cma lablgtk.cma str.cma gtkThread.cmo $(YYPARSE) 
OBDB1 = ../compiler/basis.cma debugger.cma debmain.cmo
obdb1: $(OBDB1) debprims.o ../lablgtk/lablgtk.cma ../lablgtk/liblablgtk.a
	$(OCAMLC) $(MLFLAGS) -custom -thread $(INCLUDE) -o $@ \
		$(COMPAT) $(LIBS) $(OBDB1) debprims.o $(MLLINKFLAGS) \
		-cclib "-llablgtk $(GTKLIBS)"

DEBUGGER = debconf.cmo binary.cmo info.cmo procio.cmo data.cmo \
	control.cmo sourcebook.cmo varsview.cmo stackview.cmo
debugger.cma: $(DEBUGGER)
	ocamlc $(MLFLAGS) -a -o $@ $^

debprims.o: debprims.c
	$(OCAMLC) -c -ccopt "-I .." -o $@ $<

## Rules

%.mli %.ml: %.mly
	$(MYACC) -v $<

%.ml: %.mll
	$(OCAMLLEX) -o $@ $<

%.cmi: %.mli
	$(OCAMLC) $(MLFLAGS) -c $(INCLUDE) -o $@ $<

%.cmo: %.ml
	$(OCAMLC) $(MLFLAGS) -c $(INCLUDE) -thread -o $@ $<

.DELETE_ON_ERROR:

## Cleanup

ifdef DEPEND
DEPFILE = $(srcdir)/Depend
endif

clean:
	rm -f obdb1$(EXEEXT) debrun$(EXEEXT) obdb1.x *.cmi *.cmo *.cma *.o

quiteclean: clean

distclean: quiteclean
	rm -f Makefile

realclean: distclean
	rm -f $(srcdir)/Depend debconf.ml

## Configuration and dependencies

Makefile: $(srcdir)/Makefile.in ../config.status
	cd .. && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= ./config.status

debconf.ml: $(srcdir)/debconf.ml.in ../config.status
	cd .. && ./config.status --file=$(subdir)/$@

deblex.mli: %: %.in
	cp $< $@

ML = procio.mli procio.ml binary.mli binary.ml \
	info.mli info.ml data.mli data.ml control.mli control.ml \
	debmain.ml sourcebook.ml \
	sourcebook.mli varsview.ml varsview.mli stackview.ml \
	stackview.mli debconf.ml

ifdef DEPEND
$(srcdir)/Depend: $(ML)
	$(CAMLDEP) -I ../compiler -I ../lablgtk $^ >$@
endif

include $(srcdir)/Depend
