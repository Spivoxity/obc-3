# Config stuff
srcdir = @srcdir@
subdir = lablgtk
abs_top_srcdir = @abs_top_srcdir@
abs_top_builddir = @abs_top_builddir@
MLFLAGS = @MLFLAGS@
RANLIB = @RANLIB@
WINDOWS = @WINDOWS@
MACOS = @MACOS@
VPATH = @srcdir@
CAMLDEP = @top_srcdir@/camldep
DEPEND = @DEPEND@
PKG_CONFIG = @PKG_CONFIG@
GTKPKGS = @GTKPKGS@
# End of config

ALL = lablgtk.cma liblablgtk.a gtkThread.cmo

COBJS = ml_gdkpixbuf.o ml_gdk.o ml_glib.o ml_gobject.o ml_gpointer.o	\
	ml_gvaluecaml.o wrappers.o ml_gtk.o ml_pango.o ml_gtkbin.o	\
	ml_gtkbutton.o ml_gtkmenu.o ml_gtkmisc.o ml_gtkpack.o		\
	ml_gtkstock.o ml_gtktext.o ml_gtktree.o ml_gtksourceview2.o

PROPS = gtkBase.props gtkBin.props gtkButton.props \
	gtkMenu.props gtkMisc.props gtkPack.props \
	gtkText.props gtkTree.props \
	gtkSourceView2.props

TAGS = gdkpixbuf_tags.var gdk_tags.var glib_tags.var gobject_tags.var \
	gtk_tags.var pango_tags.var sourceView2_tags.var

MLOBJS = gaux.cmo gpointer.cmo glib.cmo gobject.cmo gdkEnums.cmo	\
	pangoEnums.cmo gtkEnums.cmo sourceView2Enums.cmo pango.cmo	\
	gdk.cmo gdkEvent.cmo gdkPixbuf.cmo gtk.cmo gtkSignal.cmo	\
	gtkStock.cmo gtkObject.cmo $(PROPS:.props=Props.cmo)		\
	gtkData.cmo gtkBase.cmo gtkPack.cmo gtkButton.cmo gtkMenu.cmo	\
	gtkMisc.cmo gtkWindow.cmo gtkBin.cmo gtkText.cmo gtkTree.cmo	\
	gtkMain.cmo gtkSourceView2.cmo gDraw.cmo gObj.cmo gData.cmo	\
	$(PROPS:%.props=o%Props.cmo) gContainer.cmo gPack.cmo		\
	gButton.cmo gText.cmo gMenu.cmo gMisc.cmo gTree.cmo		\
	gWindow.cmo gBin.cmo gMain.cmo gToolbox.cmo		\
	gSourceView2.cmo

INCLUDE = -I ../compat

all: $(ALL)

PKGCONF = $(PKG_ENV) $(PKG_CONFIG) $(PKG_FLAGS)

ifdef WINDOWS
#  PKG_PATH = $(abs_top_srcdir)/winport:/cygdrive/c/GTK/lib/pkgconfig
#  PKG_ENV = env PKG_CONFIG_PATH=$(PKG_PATH)
   PKG_FLAGS = --define-variable=prefix=C:/msys64/mingw64
endif

GTKFLAGS := $(shell $(PKGCONF) --cflags $(GTKPKGS))

ifdef MACOS
  GTKFLAGS += -DHAS_GTKQUARTZ
endif

lablgtk.cma: $(MLOBJS)
	ocamlc $(MLFLAGS) -a -o $@ $^

liblablgtk.a: $(COBJS)
	ar cr $@ $^
	$(RANLIB) $@	

gtkThread.cmi: gtkThread.mli
	ocamlc $(MLFLAGS) $(INCLUDE) -c -thread -o $@ $<

gtkThread.cmo: gtkThread.ml
	ocamlc $(MLFLAGS) $(INCLUDE) -c -thread -w s -o $@ $<

CCOPTS = -ccopt '-I .' -ccopt '-I ..' -ccopt '$(GTKFLAGS)' \
	-ccopt -Wno-deprecated-declarations

%.o: %.c
	ocamlc $(MLFLAGS) -c $(CCOPTS) -o $@ $<

$(COBJS): gdk_tags.h gdkpixbuf_tags.h glib_tags.h gobject_tags.h \
	gtk_tags.h pango_tags.h sourceView2_tags.h \
	ml_gdk.h ml_gdkpixbuf.h ml_glib.h \
	ml_gobject.h ml_gpointer.h ml_gtk.h ml_gvaluecaml.h ml_pango.h \
	pango_tags.h wrappers.h

%Props.ml o%Props.ml: %.props propcc
	./propcc -o $*Props.ml $<

%_tags.c %_tags.h %Enums.ml: %_tags.var varcc
	./varcc -c $*_tags.c -h $*_tags.h $<

propcc varcc: %: %.ml
	ocamlc $(MLFLAGS) -o $@ $<

#propcc.ml varcc.ml: %.ml: %.ml4
#	camlp4 pa_o.cmo pa_op.cmo pr_o.cmo -impl $< >$@

%.cmo: %.ml
	ocamlc $(MLFLAGS) $(INCLUDE) -c -w s -o $@ $< 

%.cmi: %.mli
	ocamlc $(MLFLAGS) $(INCLUDE) -c -o $@ $< 

clean: force
	rm -f *.cma *.cmi *.cmo *.o *.a propcc varcc

quiteclean : clean
	rm -f $(PROPS:%.props=%Props.ml) $(PROPS:%.props=o%Props.ml) \
		$(TAGS:%.var=%.h) $(TAGS:%.var=%.c) \
		$(TAGS:%_tags.var=%Enums.ml)

distclean: quiteclean
	rm Makefile

realclean: distclean
	rm -f $(srcdir)/Depend

## Configuration and dependencies

Makefile: $(srcdir)/Makefile.in ../config.status
	cd .. && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= ./config.status

ML = gBin.mli gButton.mli gContainer.mli gData.mli gdk.mli		\
	gdkPixbuf.mli gDraw.mli glib.mli gMain.mli gMenu.mli		\
	gMisc.mli gobject.mli gObj.mli gPack.mli gSourceView2.mli	\
	gText.mli gtkSourceView2_types.mli gtkThread.mli gToolbox.mli	\
	gTree.mli gWindow.mli gaux.ml gBin.ml gButton.ml	\
	gContainer.ml gData.ml gdkEnums.ml gdkEvent.ml gdk.ml		\
	gdkPixbuf.ml gDraw.ml glib.ml gMain.ml gMenu.ml gMisc.ml	\
	gobject.ml gObj.ml gPack.ml gpointer.ml gSourceView2.ml		\
	gText.ml gtkBase.ml gtkBaseProps.ml gtkBin.ml gtkBinProps.ml	\
	gtkButton.ml gtkButtonProps.ml gtkData.ml gtkEnums.ml		\
	gtkMain.ml gtkMenu.ml gtkMenuProps.ml gtkMisc.ml		\
	gtkMiscProps.ml gtk.ml gtkObject.ml gtkPack.ml			\
	gtkPackProps.ml gtkSignal.ml gtkSourceView2.ml			\
	gtkSourceView2Props.ml gtkStock.ml gtkText.ml gtkTextProps.ml	\
	gtkThread.ml gtkTree.ml gtkTreeProps.ml gtkWindow.ml		\
	gToolbox.ml gTree.ml gWindow.ml ogtkBaseProps.ml	\
	ogtkBinProps.ml ogtkButtonProps.ml ogtkMenuProps.ml		\
	ogtkMiscProps.ml ogtkPackProps.ml ogtkSourceView2Props.ml	\
	ogtkTextProps.ml ogtkTreeProps.ml pangoEnums.ml pango.ml	\
	sourceView2Enums.ml

ifdef DEPEND
$(srcdir)/Depend: $(ML)
	$(CAMLDEP) $^ >$@
endif

include $(srcdir)/Depend

# Extra dependencies not found by script
gtkBaseProps.cmo gtkBinProps.cmo gtkButtonProps.cmo gtkMenuProps.cmo	\
gtkMiscProps.cmo gtkPackProps.cmo gtkSourceView2Props.cmo		\
gtkTextProps.cmo gtkTreeProps.cmo: gtkObject.cmo

force:

