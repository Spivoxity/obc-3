inst QPLUS 0 B.q 	{$1.q + $2.q} 		{qbinop(ADDq, LONG_ADD)}
inst QMINUS 0 B.q 	{$1.q - $2.q} 		{qbinop(SUBq, LONG_SUB)}
inst QTIMES 0 B.q 	{$1.q * $2.q} 		{qbinop(MULq, LONG_MUL)}
inst QUMINUS 0 M.q 	{- $1.q}      		{qmonop(NEGq, LONG_NEG)}
