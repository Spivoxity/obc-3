defs {
#define casejump(x, n0)					\
     {							\
	  int n = n0;					\
	  pc0 = pc; pc += 4*n;				\
	  while (n > 0) {				\
	       if (x == get2(pc0)) {			\
		    jump(get2(pc0+2));			\
		    break;				\
	       }					\
	       pc0 += 4; n--;				\
	  }						\
     }
}

