defs {
#define fcmpl(a, b) (a > b ? 1 : a == b ? 0 : -1)
#define fcmpg(a, b) (a < b ? -1 : a == b ? 0 : 1)
#define lcmp(a, b)  (a < b ? -1 : a > b ? 1 : 0)
}

